{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="text-center mb-5 mt-5 flash-message">
        <h2><strong>ATTENTION SITE RÉALISÉ DANS LE CADRE D'UNE FORMATION PROFESSIONNELLE</strong></h2>
        <p>Ce site n'est pas une entreprise réelle, rien ne peux être acheté.</p>
        <h3>N'entrez sous aucun prétexte vos données bancaires</h3>
    </div>
    <div class="container text-center mt-5 mb-5">
        <h1 class="text-center">Mon Panier</h1>

        {% if cart is empty %}
            <div class="alert alert-info">Votre panier est vide.</div>
        {% else %}
            <table class="table table-bordered mt-4">
                <thead>
                    <tr>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Titre de la leçon</th> {# Garde cette colonne pour afficher le contenu des leçons #}
                        <th class="text-center">Prix</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for type, items in cart %}
                        {% for item in items %}
                            <tr>
                                <td>{{ item.name }}</td>

                                {# Afficher content uniquement si item est une leçon #}
                                {% if type == 'lessons' and item.content is defined %}
                                    <td>{{ item.content }}</td>
                                {% else %}
                                    <td>Module complet</td> {# Afficher "-" si ce n'est pas une leçon ou si content n'est pas défini #}
                                {% endif %}
                                
                                <td class="text-center">{{ item.price }}€</td>
                                <td class="text-center">
                                    {% if item['order_item_id'] is defined %}
                                        <a href="{{ path('cart_remove', { 'id': item['order_item_id'] }) }}" class="btn btn-danger">Supprimer</a>
                                    {% else %}
                                        <p>Supprimer non disponible</p>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <h3>Total : {{ total }}€</h3>
                <a href="{{ path('cart_checkout') }}" class="btn btn-success">Passer à la caisse</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
