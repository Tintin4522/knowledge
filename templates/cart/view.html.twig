{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Mon Panier</h1>

        {% if cart is empty %}
            <div class="alert alert-info">Votre panier est vide.</div>
        {% else %}
            <table class="table table-bordered mt-4">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Titre de la leçon</th> {# Garde cette colonne pour afficher le contenu des leçons #}
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for type, items in cart %}
                        {% for item in items %}
                            <tr>
                                <td>{{ item.name }}</td>

                                {# Afficher content uniquement si item est une leçon #}
                                {% if type == 'lessons' and item.content is defined %}
                                    <td>{{ item.content }}</td>
                                {% else %}
                                    <td>-</td> {# Afficher "-" si ce n'est pas une leçon ou si content n'est pas défini #}
                                {% endif %}
                                
                                <td>{{ item.price }}€</td>
                                <td>
                                    {% if item['order_item_id'] is defined %}
                                        <a href="{{ path('cart_remove', { 'id': item['order_item_id'] }) }}" class="btn btn-danger">Supprimer</a>
                                    {% else %}
                                        <p>Supprimer non disponible</p>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <h3>Total : {{ total }}€</h3>
                <a href="{{ path('shop_checkout') }}" class="btn btn-success">Passer à la caisse</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
