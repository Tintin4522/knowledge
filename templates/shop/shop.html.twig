{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Les cours proposés</h1>

        <div class="row mt-5">
            <div class="col-12">
                <div class="row">
                    {% for course in courses %}
                        <div class="col-md-12 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ course.name }}</h5>
                                    <p><strong>Prix du cursus : {{ course.price }}€</strong></p>
                                    <a href="{{ path('shop_add_to_cart', { 'type': 'course', 'id': course.id }) }}" class="btn btn-primary">Acheter le Cursus</a>

                                    <h6 class="mt-4">Leçons incluses :</h6>
                                    <ul class="list-group">
                                        {% for lesson in course.lessons %}
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <p>{{ lesson.name }}</p>
                                                <p>{{ lesson.content }}</p>
                                                <p><strong>Prix du cursus : {{ lesson.price }}€</strong></p>
                                                <a href="{{ path('shop_add_to_cart', { 'type': 'lesson', 'id': lesson.id }) }}" class="btn btn-outline-primary btn-sm">Ajouter au panier</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
